<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/w1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:src="@drawable/ic_whatsapp"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <EditText
            android:id="@+id/signup_Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="@color/white"
            android:hint="Username"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/signup_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:layout_marginTop="5dp"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@color/white"
            android:hint="Email"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/signup_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:padding="20dp"
            android:textColorHint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8AFFFFFF"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:text="Already have account?"/>

        <TextView
            android:id="@+id/tw_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:text="Sign in "/>

        <Button
            android:id="@+id/sign_up"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:padding="15dp"
            android:textSize="20dp"
            app:cornerRadius="10dp"
            android:text="Sign Up"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sign_up_google"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:padding="15dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_google"
                android:textSize="18dp"
                app:cornerRadius="10dp"
                android:text="Google"/>

            <Button
                android:id="@+id/sign_up_facebook"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:padding="15dp"
                android:backgroundTint="#1952E1"
                android:layout_marginEnd="10dp"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_facebook"
                app:cornerRadius="10dp"
                android:text="Facebook"/>

        </LinearLayout>

        <TextView
            android:id="@+id/sign_up_phone_number"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:text="Sign up with Phone Number "/>
    </LinearLayout>
</LinearLayout>